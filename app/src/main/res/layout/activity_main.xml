<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#831446dc"
    tools:context=".MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/bStart"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/bPause"
        android:layout_toStartOf="@+id/bPause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/bPause"
        android:layout_alignTop="@+id/bStart"
        android:layout_centerHorizontal="true" />

    <Chronometer
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chrono"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/bReset"
        android:layout_alignTop="@+id/bPause"
        android:layout_toRightOf="@+id/bPause"
        android:layout_toEndOf="@+id/bPause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/bLink"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bStart"
        android:layout_toEndOf="@+id/bStart" />

</RelativeLayout>
